//WARNING
// Do not modify this file! Instead read the readme on how to do configuration!
{

  //Web server configuration.
  "server": {

    //Weather to log request information.
    "requestLogging": false,

    //White-list of domains allowed to access our resources.
    "cors": [],

    //Plain-text HTTP server configuration.
    "http": {
      "enabled": true,
      "host": "0.0.0.0",
      "port": 80
    },

    //Encrypted HTTP server configuration.
    "https": {
      "enabled": false,
      "host": "0.0.0.0",
      "port": 443,
      "key": null,
      "cert": null
    }

  },

  //Configuration for the file-system caching service.
  "cache": {

    //Caching directroy from project root.
    "directory": "cache"

  },

  //Security-related parameters.
  //Please note that the token-life also determines the time it takes for
  //changes in user-permissions to be propagated.
  "security": {
    "secret": "such secret",
    "tokenLife": 21600000, //(6 hours)
    "refreshLife": 1209600000 //(14 days)
  },

  //Group permission configuration. Matched made using https://github.com/jonschlinkert/micromatch
  //All logged-out users are automatically part of the @unauthorized group.
  //All logged-in users are automatically part of the @authorized group.
  "permissions": {
    "@unauthorized": ["auth.*", "ping"],
    "@authorized": ["*"]
  }

}
